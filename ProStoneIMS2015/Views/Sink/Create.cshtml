@model ProStoneIMS2015.Models.SinkVM
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Add New Record</h3>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => Model.sink.SinkName, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.sink.SinkName, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.sink.SinkName)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.sink.SinkMiniName, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.sink.SinkMiniName, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.sink.SinkMiniName)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.sink.CatalogID, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.sink.CatalogID, new { @class = "form-control" })
                    <div>
                        @Html.ValidationMessageFor(m => m.sink.CatalogID)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.sink.Price, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.sink.Price, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.sink.Price)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.sink.ImageFilename, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.sink.ImageFilename, new { @class = "form-control", @disabled = "disabled" })
                    <div>
                        @Html.ValidationMessageFor(m => m.sink.ImageFilename)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.sink.Type, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.DropDownListFor(m => m.sink.Type, Model.sink_type, "", new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.sink.Type)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.sink.Notes, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.sink.Notes, new { @class = "form-control" })
                    <div>
                        @Html.ValidationMessageFor(m => m.sink.Notes)
                    </div>
                </div>
            </div>
        </div>
    </div>

        <div class="modal-footer">
            <span id="progress" class="text-center" style="display: none;">
                <img src="@Url.Content("~/images/wait.gif")" alt="..." />
                Wait...
            </span>

            <input class="btn btn-primary" type="submit" value="Save" />
            <button class="btn btn-warning" data-dismiss="modal">Close</button>
        </div>
}
<script>
        $("form").removeData("validator");
        $("form").removeData("unobtrusiveValidation");
        $.validator.unobtrusive.parse("form");
</script>
