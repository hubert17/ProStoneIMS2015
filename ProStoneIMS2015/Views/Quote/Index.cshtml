                                <div class="panel-group m-bot20" id="accordion">
                                    <div class="panel panel-info"  style="border:1px solid #EBEBEB;">
                                        <div class="panel-heading">
                                            <h4 class="panel-title">
                                                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
                                                    Payments
                                                </a>
                                            </h4>
                                        </div>
                                        <div id="collapseTwo" class="panel-collapse collapse">
                                            <div class="panel-body PaymentTable">
                                                <table class="table table-condensed" id="PaymentTable" data-ng-controller="paymentController" data-ng-init="loadPayment(@Url.RequestContext.RouteData.Values["id"]);">
                                                    <thead>
                                                        <tr>
                                                            <th>Date</th>
                                                            <th width="100px">Amount</th>
                                                            <th></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr ng-repeat="payment in paymentModel" ng-hide="loading">
                                                            <td>
                                                                <span data-ng-hide="payment.editMode">
                                                                    {{ payment.PaymentDate | date:'MMM dd, yyyy' }}
                                                                </span>
                                                                <div class="dropdown" data-ng-show="payment.editMode">
                                                                    <a class="dropdown-toggle" id="PaymentDate" role="button" data-toggle="dropdown" data-target="#" href="#">
                                                                        <input type="text" class="form-control input-xs" data-ng-model="payment.PaymentDate" datepicker-popup="MMM dd, yyyy">
                                                                    </a>
                                                                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                                                        <datetimepicker data-ng-model="payment.PaymentDate" data-datetimepicker-config="{ startView:'day', minView:'day', dropdownSelector: '#PaymentDate' }" />
                                                                    </ul>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <span data-ng-hide="payment.editMode">
                                                                    {{payment.Amount | currency}}
                                                                </span>
                                                                <span data-ng-show="payment.editMode">
                                                                    <input type="text" name="Amount" data-ng-model="payment.Amount" required class="form-control  input-xs col-md-1" />
                                                                </span>
                                                            </td>
