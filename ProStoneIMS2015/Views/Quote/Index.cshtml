<div id="overlay-back"></div> 

<h2>Quote Editor</h2>

<section data-ng-app="gabsNgApp" class="panel" >
    <div  class="ng-cloak" data-ng-controller="quoteController" data-ng-init="loadData(@Url.RequestContext.RouteData.Values["id"]);">
            <header class="panel-heading tab-bg-dark-navy-blue tab-right">
                <ul class="nav nav-tabs pull-right">
                    <li class="active">
                        <a data-toggle="tab" href="#cust-tab">
                            <i class="fa fa-user"></i>
                            Customer Info
                        </a>
                    </li>
                    <li class="">
                        <a data-toggle="tab" href="#job-tab">
                            <i class="fa fa-info-circle"></i>
                            Job Info
                        </a>
                    </li>
                    <li class="">
                        <a data-toggle="tab" href="#stone-tab">
                            <i class="fa fa-th-large"></i>
                            Stone
                        </a>
                    </li>
                    <li class="">
                        <a data-toggle="tab" href="#sink-tab">
                            <i class="fa fa-life-bouy"></i>
                            Sinks
                        </a>
                    </li>
                    <li class="">
                        <a data-toggle="tab" href="#service-tab">
                            <i class="fa fa-suitcase"></i>
                            Services
                        </a>
                    </li>
                    <li class="">
                        <a data-toggle="tab" href="#preview-tab">
                            <i class="fa fa-print"></i>
                            Preview
                        </a>
                    </li>
