<script type="text/javascript">
    $('.fileinput-button').on('change', '.fupload', function () {
        var quoteId = @Url.RequestContext.RouteData.Values["id"];
        var sendAs = $(event.target).attr('id');
        var files = $(event.target).get(0).files;
        if (files.length > 0) {
            if (this.value.lastIndexOf('.pdf') === -1) {
                alert('Only pdf files are allowed!');
                this.value = '';
                return;
            }
            if (window.FormData !== undefined) {
                var data = new FormData();
                data.append("UploadedFile", files[0]);
                $(sendAs).removeClass("fa fa-upload").addClass("glyphicon-refresh glyphicon-refresh-animate");
                $.ajax({
                    type: "POST",
                    url: '/api/job/UploadFile?QuoteId=' + quoteId + "&SendAs=" + sendAs,
                    contentType: false,
                    processData: false,
                    data: data,
                    success: function (result) {
                        alert(result);
                        $(sendAs).removeClass("glyphicon-refresh glyphicon-refresh-animate").addClass("fa fa-upload");
                    },
                    error: function (xhr, status, p3, p4) {
                        var err = "Error " + " " + status + " " + p3 + " " + p4;
                        if (xhr.responseText && xhr.responseText[0] == "{")
                            err = JSON.parse(xhr.responseText).Message;
                        alert(err);
                    }
                });
            } else {
                alert("This browser doesn't support HTML5 file uploads!");
            }
        }
    });

    $('.fileupload-buttonbar').on('click', '.task-title-sp a', function () {
        var sendAs = $(event.target).attr('id');
        var link = '@Url.Content("~/Attachment/")@Url.RequestContext.RouteData.Values["id"]' + '_' + sendAs + '.pdf';
        var w = window.open( link, '_blank'  );
        $.ajax({
            url: link,
            type:'HEAD',
            error: function()
            {
                w.close();
                alert(sendAs + ".pdf does not exist. Please upload a new one.")
            },
            success: function()
            {
                w = window.open(link, '_blank');
            }
        });
    });

</script>

